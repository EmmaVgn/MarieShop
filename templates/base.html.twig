<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}MarieShope
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="https://bootswatch.com/5/sandstone/bootstrap.min.css">
			<link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
			<link href="{{ asset('assets/css/carousel.css') }}" rel="stylesheet">
		{% endblock %}
	</head>
	<body>
		<header>
			{% include "shared/_navbar.html.twig" %}
		</header>

		<main role="main">
			{% include "shared/_flash.html.twig" %}
			{% set margin = '' %}
			{% if carousel is defined %}
				{% include "shared/_carousel.html.twig" %}
			{% else %}
				{% set margin = 'mt-5' %}
			{% endif %}
			<div class="container marketing {{ margin }}"> {% block body %}{% endblock %}
				</div>
			</main>

			{% include "shared/_footer.html.twig" %}

			{% block javascripts %}
				<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
				<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
				<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
			{% endblock %}
		</body>
	</html>
