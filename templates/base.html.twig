<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Aromielis
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">

			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
			<link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
		{% endblock %}
	</head>
	<body>
		<header>
			{% include "shared/_navbar.html.twig" %}
		</header>

		<main role="main">
			{% include "shared/_flash.html.twig" %}
			{% set margin = '' %}
			{% if carousel is defined %}
				{% include "shared/_carousel.html.twig" %}
			{% else %}
				{% set margin = 'mt-5' %}
			{% endif %}
			<div class="container marketing {{ margin }}"> {% block body %}{% endblock %}
				</div>
			</main>

			{% include "shared/_footer.html.twig" %}

			{% block javascripts %}
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
				<script src="https://kit.fontawesome.com/50d220494b.js" crossorigin="anonymous"></script>

			{% endblock %}
		</body>
	</html>
