{% extends 'base.html.twig' %}

{% block title %}Les conseils de Marie
{% endblock %}

{% block body %}
	<main>
		<h1>Les conseils de Marie</h1>
		<hr>

		<section class="blog-listing gray-bg">
			<div class="container">
				<div class="row align-items-start">
					<div class="col-lg-8 m-15px-tb">
						<div class="row">
							{% for advise in advise %}
								<div class="col-sm-6">
									<div class="blog-grid">
										<div class="blog-img">
											<div class="date">
												<span>{{ advise.createdAt|format_datetime('medium', 'none', locale='fr') }}</span>
												<img src="{{ vich_uploader_asset(advise, 'imageFile') }}" alt="{{ advise.name }}" class="img-fluid" width="400" height="200">
											</div>
										</div>
										<div class="blog-info">
											<h5>{{ advise.name }}</h5>
											<p>{{ advise.subtitle }}</p>
											<div class="btn-bar">
												<a href="{{ path('advise_show', {'slug': advise.slug}) }}" class="custom-btn">
													Lire plus
												</a>
											</div>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
{% endblock %}
